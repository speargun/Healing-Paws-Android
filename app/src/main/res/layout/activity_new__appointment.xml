<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New_Appointment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/n_t_appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/appointment"
                android:textSize="25sp"/>


            <TextView
                android:id="@+id/n_t_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:text="@string/pet"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/n_s_pet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/n_t_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="@string/location"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/n_rg_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/n_rb_beijing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/beijing"
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/n_rb_shanghai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/shanghai"
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/n_rb_chengdu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/chengdu"
                    android:textSize="18sp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/n_t_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="@string/type"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/n_rg_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/n_rb_emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency"
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/n_rb_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:text="@string/standard"
                    android:textSize="18sp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/n_t_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/doctor"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/n_s_doctor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/n_t_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/change"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/n_rg_change"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/n_rb_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/accept"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/n_rb_refuse"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:text="@string/refuse"
                    android:textSize="18sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/n_t_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/description"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/n_et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:textSize="18sp" />

            <Button
                android:id="@+id/n_b_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/submit" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/n_b_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/back"
                    android:textSize="17sp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>